<html>
	<head>
		<title>SejaLivro - Assinatura Literária</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
		<link rel="stylesheet" href="assets/css/main.css" />
		<!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
		<!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
		<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
		</script>
	</head>
	<body class="homepage">
		<div id="page-wrapper">

			<!-- Header -->
				<div id="header-wrapper">
					<div class="container">
						<!-- Header -->
							<% if user_signed_in? %>
			                <%= render 'main/login_top_menu' %>
			            <% else %>
			                <%= render 'main/logout_top_menu' %>
			            <% end %>
					</div>
				</div>
				
			<!-- Main Wrapper -->
				<div id="main-wrapper">
					<div class="wrapper style3">
						<div class="inner">
							<div class="container">
								<section class="container box feature1">
									<div class="row" id="bookstoreList">
										<div class="12u">
											<header>
												<h2>Livrarias</h2> <br>
												<div class="row">
													<div class="6u">
													<%= form_tag search_bookstores_path do %>
													<%= label_tag(:q, "Buscar livraria pelo nome:") %>
													<input type="search" id="search" placeholder="Buscar livrarias" type="text" name="query">
													<%= submit_tag("Buscar") %>
													<% end %>
													</div>
													<div class="6u">
														<a href="bookstores/new.html" class="button">Adicionar livraria</a>
													</div>
												</div>
												
											</header>
											<div class="row"> 
												<div class="1u"> 
													<b>ID</b>
												</div>
												<div class="2u"> 
													<b>NAME</b>
												</div>
												<div class="2u"> 
													<b>CNPJ</b>
												</div>
												<div class="2u"> 
													<b>Telephone</b>
												</div>
												<div class="5u"> 
													<b>Options</b>
												</div>
											</div>
											<% if @bookstores.count == 0 and @q != nil %>
												<div class="row"> 
													<div class="12u">
														<h2>
															<%= "Não há livrarias cadastradas com esse nome" %>
														</h2>
													</div>
												</div>
												<div class="row"> 
													<div class="12u">
														<%= link_to "Voltar", "/bookstores/", :class => "button" %>
														</div>
												</div>
											<% end %>
											<% @bookstores.each do |bookstore| %>
												<div class="row"> 
													<div class="1u"> 
														<%= bookstore.id %>
													</div>
													<div class="2u"> 
														<%= bookstore.name %>
													</div>
													<div class="2u"> 
														<%= bookstore.cnpj %>
													</div>
													<div class="2u"> 
														<%= bookstore.telephone %>
													</div>
													<div class="5u"> 
													<span> 
														<%= link_to "Visualizar", "/bookstores/#{bookstore.id.to_s}/view/", :class => "button" %>
														<%= link_to "Editar", "/bookstores/#{bookstore.id.to_s}/edit/", :class => "button" %>
														<%= link_to "Deletar", "/bookstores/#{bookstore.id.to_s}/del/", :class => "button" %>
	
													</div>
												</div>
											<% end %>	
										</div>
									</div>	
								</section>
							</div>
						</div>
					</div>
				</div>
				
			<!-- Footer Wrapper -->
			<%= render 'main/footer' %>