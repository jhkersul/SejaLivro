		</script>
	</head>
	<body class="homepage">
		<div id="page-wrapper">

			<!-- Header -->
				<div id="header-wrapper">
					<div class="container">
						<!-- Header -->
							<% if user_signed_in? %>
			                <%= render 'main/login_top_menu' %>
			            <% else %>
			                <%= render 'main/logout_top_menu' %>
			            <% end %>
					</div>
				</div>
				
			<!-- Main Wrapper -->
				<div id="main-wrapper">
					<div class="wrapper style3">
						<div class="inner">
							<div class="container">
							<section class="container box feature1">
									<div class="row" id="createBookstore">
										<div class="12u">
											<header>
												<h2>Adicionar item</h2>
											</header>
										</div>
									</div>
							</section>
						<%= form_for(@bookstore) do |f| %>                        	
                          	<% if @bookstore.errors.any? %>
                            	  <div id="error_explanation">
                                	<h2><%= pluralize(@bookstore.errors.count, "error") %> prohibited this user from being saved:</h2>
                                	<ul>
                                  	<% @bookstore.errors.full_messages.each do |message| %>
                                    	  <li><%= message %></li>
                                  	<% end %>
                                	</ul>
                             	  </div>
                        <% end %>								
								<div class="row">								
									<div class="6u 12u(mobile)">										
											<fieldset>												
												<label for="name"><span>Nome </span><%= f.text_field :name, id: 'nome'%></label>
												<label for="cnpj"><span>CNPJ </span><%= f.text_field :cnpj, id: 'cnpj' %></label>
											</fieldset>
									</div>
									<div class="6u 12u(mobile)">										
											<fieldset>
												<label for="tel"><span>Telefone </span><%= f.text_field :telephone, id: 'telefone' %></label>
												<!-- <label for="email"><span>E-mail </span><%# f.text_field :email %></label>
												-->
											</fieldset>										
									</div>
								</div>
								<section class="container box feature1">
									<div class="row">
										<div class="12u">										
											<%= f.submit "Salvar", class: "button", id: 'salvar' %>
											<%= link_to "Cancelar", "/bookstores", class: "button" %>
										</div>
									</div>
								</section>
					<% end %>								
							</div>
						</div>
					</div>
				</div>

			<!-- Footer Wrapper -->
			<%= render 'main/footer' %>

	<script type="text/javascript">
    $(document).ready(function() { $('#salvar').on('click', function(e){
      if (!validateBookstore())
          e.preventDefault();
    	})
  	});
  </script>