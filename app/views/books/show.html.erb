		</script>
	</head>
	<body class="homepage">
		<div id="page-wrapper">

			<!-- Header -->
      <div id="header-wrapper">
        <div class="container">
          <% if user_signed_in? %>
              <%= render 'main/login_top_menu' %>
          <% else %>
              <%= render 'main/logout_top_menu' %>
          <% end %>

			<!-- Main Wrapper -->
				<div id="main-wrapper">
					<div class="wrapper style3">
						<div class="inner">
							<div class="container">
							<section class="container box feature1">
									<div class="row" id="viewBook">
										<div class="12u">
											<header>
												<h2>Visualizar item</h2>
											</header>
										</div>
									</div>
							</section>
								<div class="row">
									<div class="6u 12u(mobile)" style="text-align:right">
										<%= image_tag("/images/books_cover/#{@book.id}.jpg",  float:'right', width:'auto', height:'400') %>
									</div>
									<div class="6u 12u(mobile)">
										<dl class="inline">
											<dt>ID:</dt>
											<dd><%= @book.id %></dd>
											<dt>Nome:</dt>
											<dd><%= @book.name %></dd>
											<dt>ISBN:</dt>
											<dd><%= @book.isbn %></dd>
											<dt>Autor:</dt>
											<dd><%= @book.author %></dd>
											<dt>Ano:</dt>
											<dd><%= @book.year %></dd>
											<dt>Idioma:</dt>
											<dd><%= @book.language %></dd>
											<dt>Editora:</dt>
											<dd><%= @book.publisher %></dd>
										</dl>
									</div>
								</div>
								<section class="container box feature1">
									<div class="row">
										<div class="12u">
											<span> <%= link_to 'Voltar', books_path, class: "button" %>
                          							<%= link_to 'Editar', edit_book_path(@book), class: "button" %>
                          							<%= link_to 'Excluir', @book, method: :delete, class: "button" %>
											  </span>
										</div>
									</div>
								</section>
							</div>
						</div>
					</div>
				</div>

				<div class="12u">
											<header>
												<h2></h2>
											</header>

											<footer>

											</footer>
										</div>
									</div>
							  </section>
							</div>
						</div>
					</div>
				</div>

			<!-- Footer Wrapper -->
			<%= render 'main/footer' %>